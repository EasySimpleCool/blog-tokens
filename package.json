{
  "name": "blog-tokens",
  "version": "1.0.0",
  "description": "A minimal blog with design tokens integration",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "process-tokens": "node --input-type=module ./node_modules/style-dictionary/bin/style-dictionary build --config style-dictionary.config.js",
    "dev": "browser-sync start --server --files 'src/**/*.css, *.html' --port 3000 --open",
    "test": "echo \"Error: no test specified\" && exit 1",
    "eleventy": "eleventy",
    "eleventy:dev": "eleventy --serve",
    "build": "npm run process-tokens && eleventy",
    "start": "npm run process-tokens && eleventy --serve"
  },
  "keywords": [
    "design-tokens",
    "blog",
    "minimal"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@tokens-studio/sd-transforms": "^1.3.0",
    "browser-sync": "^2.29.3",
    "style-dictionary": "^4.4.0"
  }
}
