{
  "modify": {
    "display": {
      "color": {
        "fg": {
          "primary": {
            "$type": "color",
            "$value": "{input.color.darks.500}"
          },
          "secondary": {
            "$type": "color",
            "$value": "{input.color.darks.100}"
          }
        },
        "bg": {
          "above": {
            "$type": "color",
            "$value": "{input.color.lights.100}"
          },
          "middle": {
            "$type": "color",
            "$value": "{input.color.lights.500}"
          },
          "below": {
            "$type": "color",
            "$value": "{input.color.lights.700}"
          }
        },
        "border": {
          "default": {
            "$extensions": {
              "studio.tokens": {
                "modify": {
                  "type": "alpha",
                  "value": ".15",
                  "space": "srgb"
                }
              }
            },
            "$type": "color",
            "$value": "{input.color.darks.500}"
          }
        }
      }
    }
  }
}