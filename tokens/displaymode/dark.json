{
  "modify": {
    "displaymode": {
      "color": {
        "fg": {
          "primary": {
            "$type": "color",
            "$value": "{input.color.lights.100}"
          },
          "secondary": {
            "$type": "color",
            "$value": "{input.color.lights.500}"
          }
        },
        "bg": {
          "above": {
            "lighter": {
              "$type": "color",
              "$value": "{input.color.darks.100}"
            },
            "default": {
              "$type": "color",
              "$value": "{input.color.darks.200}"
            },
            "darker": {
              "$type": "color",
              "$value": "{input.color.darks.300}"
            }
          },
          "middle": {
            "lighter": {
              "$type": "color",
              "$value": "{input.color.darks.400}"
            },
            "default": {
              "$type": "color",
              "$value": "{input.color.darks.500}"
            },
            "darker": {
              "$type": "color",
              "$value": "{input.color.darks.600}"
            }
          },
          "below": {
            "lighter": {
              "$type": "color",
              "$value": "{input.color.darks.700}"
            },
            "default": {
              "$type": "color",
              "$value": "{input.color.darks.800}"
            },
            "darker": {
              "$type": "color",
              "$value": "{input.color.darks.900}"
            }
          }
        },
        "border": {
          "default": {
            "$extensions": {
              "studio.tokens": {
                "modify": {
                  "type": "alpha",
                  "value": ".15",
                  "space": "srgb"
                }
              }
            },
            "$type": "color",
            "$value": "{input.color.lights.500}"
          }
        }
      }
    }
  }
}